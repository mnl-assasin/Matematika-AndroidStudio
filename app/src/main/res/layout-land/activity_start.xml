<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_topic"
    android:fitsSystemWindows="true"
    tools:context="com.sti.matematika.StartActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"

        android:textColor="#000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBS"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Big and Small" />

    <Button
        android:id="@+id/btnTS"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBS"
        android:layout_centerHorizontal="true"
        android:text="Tall and Short" />

    <Button
        android:id="@+id/btnSD"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTS"
        android:layout_centerHorizontal="true"
        android:text="Same or Different" />

    <Button
        android:id="@+id/btnAO"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSD"
        android:layout_centerHorizontal="true"
        android:text="Adding of Objects" />
</RelativeLayout>
